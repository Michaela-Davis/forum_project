<!DOCTYPE html>
<html>
    {% include '/components/head.html.twig' %}
    <body>
        <div class="container">
            {% include '/components/navbar.html.twig' %}

            <h1 class="welcome">Welcome to CodeFusion</h1>
            <h2 class="welcome">Answers are the elixir for what ails ya.</h2>

            <table class="table table-striped table-hover ">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Category Name</th>
                    </tr>
                  </thead>
                  <tbody>
                      {% set count = 0 %}
                      {% if all_categories is not empty %}
                      {% for category in all_categories %}
                      {% set count = count + 1%}
                      <tr>
                          <td>{{count}}</td>
                          <td><a href="/category/{{category.getCategory}}">{{category.getCategory}}</a></td>
                          <td>
                           {% if user is not empty %}
                              <form class="form-group tbl-del" action="/delete-category/{{category.getId}}" method="post">
                                    <input type="hidden" name="_method" value="delete">
                                    <button type="submit" class="btn btn-xs btn-warning" name="button"><i class="fa fa-times" aria-hidden="true"></i> &nbsp; Remove</button>
                              </form>
                            {% endif %}
                          </td>
                      </tr>
                      {% endfor %}
                      {%endif%}
                  </tbody>
                </table>
                {% if user is not empty %}
                <form class="form-horizontal well" action="/categories" method="post">
                  <fieldset>
                    <legend>Add category</legend>
                    <div class="form-group">
                      <label for="inputCategory" class="col-lg-2 control-label">Category Name</label>
                      <div class="col-lg-10">
                        <input type="text" class="form-control" name="inputCategory" placeholder="Category Name">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default"><i class="fa fa-times" aria-hidden="true"></i> &nbsp Cancel</button>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> &nbsp Submit</button>
                      </div>
                    </div>
                  </fieldset>
                </form>
                {% endif %}


            {% include '/components/footer.html.twig' %}
        </div>
    </body>
</html>
